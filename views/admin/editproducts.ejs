<section id="main-content">
    <section class="wrapper">
        <h1>Edit Products</h1>
        <div class="container">
            <div class="row justify-content-center">
              <div class="col-md-6">
                <form action="/admin/Products/update/<%= product._id %>" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
                  <div class="form-group">
                    <label for="productName"><i class="fas fa-user"></i> Name</label>
                    <input type="text" name="name" class="form-control" value="<%= product.name %>" id="productName" placeholder="Enter product name">
                    <div id="errorName" class="error-message"></div>
                    <% if (errorMessage) { %>
                        <p style="color: red;"><%= errorMessage %></p>
                      <% } %>
                  </div>
                  <div class="form-group">
                    <label for="productDescription"><i class="fas fa-file-alt"></i> Description</label>
                    <textarea class="form-control" name="description" id="productDescription"><%- product.description %></textarea>
                    <div id="errorDescription" class="error-message"></div>
                  </div>
                  <div class="form-group">
                    <label for="productPrice"><i class="fas fa-dollar-sign"></i> Price</label>
                    <input type="number" name="price" class="form-control" id="productPrice" value="<%= product.price %>" placeholder="Enter product price">
                    <div id="errorPrice" class="error-message"></div>

                  </div>
                  <div class="form-group">
                    <label for="productCategory"><i class="fas fa-tags"></i> Category</label>
                    <input type="text" name="category" class="form-control" id="productCategory" value="<%= product.category %>" placeholder="Enter product category">
                    <div id="errorCategory" class="error-message"></div>

                  </div>
                  <div class="form-group">
                    <label for="productImage"><i class="fas fa-image"></i> Image</label>
                    <input type="file" name="image" class="form-cproductImageontrol-file" id="productImage" ><br>
                    <img src="/productimg/<%= product.image %>" width="100px" height="100px" alt="<%= product.image %>">
                    <div id="errorImage" class="error-message"></div>

                    
                  </div>
                  <div class="form-group">
                    <label for="productStock"><i class="fas fa-cubes"></i> Stock</label>
                    <input type="number" name="stock" class="form-control" value="<%= product.stock %>" id="productStock" placeholder="Enter product stock">
                    <div id="errorStock" class="error-message"></div>

                  </div>
                  <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Submit</button>
                </form>
              </div>
            </div>
          </div>
        
       

    </section>
</section>






