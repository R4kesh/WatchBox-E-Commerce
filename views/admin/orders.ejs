                            <tbody id="tableBody">
                                <% users.forEach((user, index) => { %>
                                    <% user.orders.reverse().forEach((order, orderIndex) => { %>
                                        <tr class='align-middle'>
                                            
                                            <td style="color: black;"><%= user.name %></td>
                                            <td style="color: black;">
                                                <% if (order.addressId && address.length > 0) { %>
                                                    <% const specificAddress = address.find(addr => addr._id.toString() === order.addressId.toString()); %>
                                                    <% if (specificAddress) { %>
                                                        <%= specificAddress.houseName %>, <%= specificAddress.street %>, <%= specificAddress.city %>, <%= specificAddress.state %>, <%= specificAddress.pincode %>, <%= specificAddress.country %>
                                                    <% } else { %>
                                                        <!-- Handle case where address is not found -->
                                                        Address not found
                                                    <% } %>
                                                <% } else { %>
                                                    <!-- Handle case where addressId is not present or address array is empty -->
                                                    No address available
                                                <% } %>
                                            </td>
                                            
                                            <td style="color: black;"><%= order.product.name %></td>
                                            <td style="color: black;"><%= order.quantity %></td>
                                            <td style="color: black;"><%= order.orderDate.toLocaleDateString() %></td>
                                            <td style="color: black;"><%= order.status %></td>
                                            <!-- <td>
                                                <a href="#" class="text-success">
                                                    <i class="fas fa-edit fa-lg mx-1"></i>
                                                </a>
                                            </td> -->
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="statusDropdown" data-bs-toggle="dropdown" aria-expanded="true">
                                                        Change Status
                                                    </button>
                                                    <ul class="dropdown-menu" aria-labelledby="statusDropdown">
                                                        
                                                        <li><a class="dropdown-item" href="/updateOrderStatus/<%= user._id %>/<%= order._id %>/Order Confirmed" onclick="updateOrderStatus('<%= order._id %>', 'Order Confirmed')">Order Confirmed</a></li>

                                                        <li><a class="dropdown-item" href="/updateOrderStatus/<%= user._id %>/<%= order._id %>/Shipped" onclick="updateOrderStatus('<%= order._id %>', 'Shipped')">Shipped</a></li>
                                                        <li><a class="dropdown-item" href="/updateOrderStatus/<%= user._id %>/<%= order._id %>/Out For Delivery" onclick="updateOrderStatus('<%= order._id %>', 'Out For Delivery')">Out For Delivery</a></li>

                                                        <li><a class="dropdown-item" href="/updateOrderStatus/<%= user._id %>/<%= order._id %>/Delivered" onclick="updateOrderStatus('<%= order._id %>', 'Delivered')">Delivered</a></li>
                                                       
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% }) %>
