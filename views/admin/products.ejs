<script>
    // Add an event listener for all buttons with the class "block-button"
    const buttons = document.querySelectorAll('.block-button');

    buttons.forEach(button => {
        button.addEventListener('click', async (event) => {
            event.preventDefault();
            const button = event.target;
            const userId = button.getAttribute('data-user-id');
            const userStatus = button.closest('tr').querySelector('[data-user-status]');
            
            // Simulate an asynchronous request to the server to block/unblock the user
            try {
                const response = await fetch(`/admin/block/${userId}`, { method: 'POST' });
                if (response.status === 200) {
                    if (userStatus.getAttribute('data-user-status') === 'active') {
                        userStatus.textContent = 'Blocked';
                        userStatus.setAttribute('data-user-status', 'blocked');
                        button.textContent = 'Unblock';
                    } else {
                        userStatus.textContent = 'Active';
                        userStatus.setAttribute('data-user-status', 'active');
                        button.textContent = 'Block';
                    }
                } else {
                    console.error('Failed to block/unblock user');
                }
            } catch (error) {
                console.error(error);
            }
        });
    });
</script>
