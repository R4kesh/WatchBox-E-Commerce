<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>WatchboX</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
        content="Desk Login form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <link href="//fonts.googleapis.com/css?family=Mukta:200,300,400,500,600,700,800" rel="stylesheet">
    <link rel="stylesheet" href="/otp.css" type="text/css" media="all" />
</head>

<body>
    <section class="w3l-forms-main-61">
        <div class="form-inner">
            <div class="wrapper">
                <div class="d-grid top-form">
                    <div class="logo">
                        <a class="brand-logo" href="login.ejs"><span><span class="fa fa-viadeo" aria-hidden="true"></span>
                                </span></a>
                    </div>
                </div>
                <div class="form-bg-blur">
                    <div class="form-61 text-center">
                        <h4 class="form-head" style="color: aliceblue;">User Login</h4>

                        <form action="/otp" method="post">
                            <div class="container height-100">
                                <div class="d-flex justify-content-center align-items-center">
                                    <div class="position-relative">
                                        <div class="card p-2 text-center">
                                            <h6 style="color: aliceblue;">Please enter the one time password to verify your account</h6>
                                            <div><span style="color: aliceblue;">A code has been sent to</span> <small></small></div>
                                            <div class="error-message">
                                                <% if (errorMessage) { %>
                                                  <p style="color: red;"><%= errorMessage %></p>
                                                <% } %>
                                              </div>
                                            <input type="text" id="otp" name="otp">
                                            <div class="mt-4">
                                                <button class="btn btn-danger px-4 validate" type="submit">Submit</button>
                                            </div>
                                            <div id="countdown" style="color: red;">00:30</div>
                                            <div id="hiddenButton" style="display: none;"> <!-- Initially hidden -->
                                                <a id="showButton" href="/user/newotp">Resend OTP</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

   
          <script>
        let seconds = 30;

        function countdown() {
            const countdownDisplay = document.getElementById('countdown');
            const interval = setInterval(function () {
                countdownDisplay.textContent = seconds;

                if (seconds === 0) {
                    clearInterval(interval);
                } else {
                    seconds--;
                }
            }, 1000);
        }

        countdown(); // Start the countdown when the page loads
    </script>

    <script>
        // Function to show the hidden button after 1 minute
        function showButtonAfterOneMinute() {
            const hiddenButton = document.getElementById('hiddenButton');
            hiddenButton.style.display = 'block'; // Show the hidden button
        }

        // Set a timeout to call the function after 1 minute (60,000 milliseconds)
        setTimeout(showButtonAfterOneMinute, 30000);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script> 
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</body>
</html>
